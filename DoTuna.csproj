<Project ToolsVersion="15.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFrameworkVersion>v4.8</TargetFrameworkVersion>
    <RootNamespace>Dotuna</RootNamespace>
    <AssemblyName>Dotuna</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <Compile Include="Program.cs" />
    <Compile Include="Form1.cs" />
    <Compile Include="Form1.Designer.cs">
      <DependentUpon>Form1.cs</DependentUpon>
    </Compile>

    <Compile Include="thread/JsonIndexDocument.cs" />
    <Compile Include="thread/JsonThreadDocument.cs" />
    <Compile Include="thread/ThreadManager.cs" />
    <Compile Include="export/ExportManager.cs" />

    <Compile Include="Properties\AssemblyInfo.cs" />
  </ItemGroup>

  <ItemGroup>
    <!-- 필수 어셈블리 참조 -->
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Windows.Forms" />
    <Reference Include="System.Drawing" />
    <Reference Include="System.Threading" />
    <Reference Include="System.Threading.Tasks" />
  </ItemGroup>

  <ItemGroup>
    <!-- NuGet 패키지 참조 (System.Text.Json) -->
    <PackageReference Include="System.Text.Json" Version="7.0.2" />
  </ItemGroup>

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>
